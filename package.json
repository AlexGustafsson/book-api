{
  "name": "book-api",
  "version": "1.0.0",
  "description": "An API to retrieve information about books from several different sources.",
  "main": "index.js",
  "scripts": {
    "test": "xo && nyc ava -v test/*.js"
  },
  "keywords": [
    "book",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/alexgustafsson/book-api.git"
  },
  "author": "Alex Gustafsson",
  "license": "ISC",
  "devDependencies": {
    "ava": "^1.0.1",
    "nyc": "^13.1.0",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cheerio": "^1.0.0-rc.2"
  },
  "xo": {
    "space": 2,
    "esnext": true,
    "rules": {
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ],
      "unicorn/catch-error-name": [
        "error",
        {
          "name": "error"
        }
      ],
      "dot-notation": [
        "off"
      ],
      "quote-props": [
        "off"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ]
    }
  },
  "ava": {
    "concurrency": 5,
    "failFast": false,
    "failWithoutAssertions": false,
    "tap": true,
    "verbose": true,
    "compileEnhancements": false
  }
}
