{
  "name": "book-api",
  "version": "2.2.0",
  "description": "An API to retrieve information about books from several different sources.",
  "main": "lib/index.js",
  "bin": {
    "book-api": "./lib/cli.js"
  },
  "scripts": {
    "dev": "DEBUG=book-api:* node src/cli.js",
    "start": "NODE_ENV=production node src/cli.js",
    "lint": "xo",
    "test": "ava",
    "coverage": "nyc ava -t",
    "check-duplicate-code": "jsinspect -t 20 src",
    "build": "./build.sh"
  },
  "keywords": [
    "book",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/alexgustafsson/book-api.git"
  },
  "author": "Alex Gustafsson",
  "license": "ISC",
  "devDependencies": {
    "ava": "^1.3.1",
    "jsinspect": "^0.12.7",
    "nyc": "^13.3.0",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cheerio": "^1.0.0-rc.2",
    "debug": "^4.1.1",
    "yargs": "^13.2.2"
  },
  "xo": {
    "space": 2,
    "esnext": true,
    "rules": {
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ],
      "unicorn/catch-error-name": [
        "error",
        {
          "name": "error"
        }
      ],
      "dot-notation": [
        "off"
      ],
      "quote-props": [
        "off"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "padding-line-between-statements": [
        "off"
      ]
    }
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "concurrency": 5,
    "failFast": false,
    "verbose": true,
    "compileEnhancements": false
  }
}
